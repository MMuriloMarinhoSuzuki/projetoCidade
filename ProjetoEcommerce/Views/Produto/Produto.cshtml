@model IEnumerable<ProjetoEcommerce.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary">Produtos Cadastrados</h2>
    <a asp-controller="Produto" asp-action="CadastrarProduto" class="btn btn-success">Cadastrar Produto</a>
</div>

<table class="table table-bordered table-hover table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().IdPRod)</th>
            <th>@Html.DisplayNameFor(model => model.First().Nome)</th>
            <th>@Html.DisplayNameFor(model => model.First().Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.First().Preco)</th>
            <th>@Html.DisplayNameFor(model => model.First().Quantidade)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdPRod)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                <td>@item.Preco.ToString("C")</td>
                <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
                <td>
                    @Html.ActionLink("Editar", "EditarProduto", new { id = item.IdPRod }) |
                    @Html.ActionLink("Excluir", "ExcluirProduto", new { id = item.IdPRod },
                             new { onclick = "return confirm('Deseja realmente Excluir este produto?');" })
                </td>
            </tr>
        }
    </tbody>
</table>
